. panel_colors

FONT_FAMILY='Meslo LG M for Powerline'
FONT_SIZE=12

ba=$(acpi -b | cut -d " " -f 5 | cut -d ":" -f 1,2)
(   echo "Power:"
    echo "${ba}"
    ) | dzen2 -p -x "1265" -y "18" -w "100" -h 20 -sa  'c' -l '1' -ta 'c'\
    -title-name 'popup_sysinfo' -e 'onstart=uncollapse;button1=exit;leavetitle=exit;button3=exit' -fn "${FONT_FAMILY}:pixelsize=${FONT_SIZE}" -bg "#34322E" -fg "#94bff3"
