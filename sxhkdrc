#
# bspwm hotkeys
#

super + alt + Escape
	pkill -x panel;bspc quit

alt + Tab
	bspc window -f next

super + w
	bspc window -c

super + t
	bspc desktop -l next
super + p
	bspc desktop -R 90
super + b
	bspc desktop -B
super + shift + b
	bspc desktop -E

super + {s,f,o}
	bspc window -t {floating,fullscreen,pseudo_tiled}

super + {grave,Tab}
	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on


# Reducing gap on the fly 
alt + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# Sticky windows
super + e
    bspc window -t sticky

# Hide all windows on all desktops
super + z
    bspc control --toggle-visibility 

super + q
        bspc monitor -f next

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

~/button{4,5}
	bspc desktop -f {prev,next}

super + button{4,5}
	bspc desktop -f {prev,next}

super + button{1-3}
	 bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i
 
super + @button{1-3}
 	bspc pointer -u
# hide windows
alt + shift + m
  D=$(bspc query --desktops --desktop focused); \
  W=$(bspc query --windows --window focused); \
  bspc query --desktops | grep -q "'$D" || bspc monitor --add-desktops \'$D; \
  bspc window $W --to-desktop \'$D
#unhide
super + alt + shift + m
    D=$(bspc query --desktops --desktop focused); \
    if bspc query --desktops | grep -q "'$D"; then \
      for i in $(bspc query --windows --desktop \'$D); do \
        bspc window $i --to-desktop $D; \
        break; \
      done; \
      bspc window $i --focus; \
      bspc window --swap biggest; \
      (( $(bspc query --windows --desktop \'$D | wc -l) )) || bspc desktop \'$D --remove; \
    fi
#
# wm independent hotkeys
#
#touchpad toggle
XF86TouchpadToggle
	ttoggle
#lockscreen
ctrl + alt + Delete
	block

# open a "scratchpad" terminal (quake-style, in this case, on a 1366x768 display)
alt + grave
  xdotool search --onlyvisible --classname URxvtQuake windowunmap \
    || xdotool search --classname URxvtQuake windowmap \
    || terminator --classname=URxvtQuake --geometry=1350x200+7+18
# terminal
super + Return
	terminator
# screenshot selected area
Print
	scrot '%Y-%m-%d-%h-%m_$wx$h_scrot.png' -e 'mv $f ~/Pictures' && notify-send "Screenshot taken"
alt + Print
	scrot -s '%Y-%m-%d-%h-%m_$wx$h_scrot.png' -e 'mv $f ~/Pictures' && notify-send "Screenshot taken"

super + s
	subl3

capslock
	lnch

shift + alt + 1
	xkb-switch -s "cz(qwerty)"

super + space
	drun

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
